	"item": [
		{
			"name": "Регистрация пользователя",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"jwt\", \"\");",
							"pm.collectionVariables.set(\"username\", pm.variables.replaceIn('{{$randomUserName}}'));",
							"pm.collectionVariables.set(\"password\", pm.variables.replaceIn('{{$randomPassword}}'));"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUri}}/registration",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"registration"
					]
				}
			},
			"response": []
		},
		{
			"name": "Вход пользователя",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const resp = pm.response.json();",
							"pm.collectionVariables.set(\"jwt\", resp.token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUri}}/login",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Изменение локации",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"settlement\", pm.variables.replaceIn('{{$randomCity}}'));",
							"pm.collectionVariables.set(\"street\", pm.variables.replaceIn('{{$randomStreetName}}'));",
							"pm.collectionVariables.set(\"building\", pm.variables.replaceIn(_.random(1, 200)));",
							"pm.collectionVariables.set(\"apartment\", pm.variables.replaceIn(_.random(1, 200)));",
							"pm.collectionVariables.set(\"postIndex\", pm.variables.replaceIn('{{$randomInt}}' + '{{$randomInt}}'));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"settlement\": \"{{settlement}}\",\r\n  \"street\": \"{{street}}\",\r\n  \"building\": \"{{building}}\",\r\n  \"apartment\": \"{{apartment}}\",\r\n  \"postIndex\": {{postIndex}}\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUri}}/user/:username/address/edit",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"user",
						":username",
						"address",
						"edit"
					],
					"variable": [
						{
							"key": "username",
							"value": "{{username}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Создание магазина пользователя",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"storeName\", pm.variables.replaceIn('{{$randomUserName}}'));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{{storeName}}",
					"options": {
						"raw": {
							"language": "text"
						}
					}
				},
				"url": {
					"raw": "{{baseUri}}/store/create",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"store",
						"create"
					]
				}
			},
			"response": []
		},
		{
			"name": "Получание ID магазина",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const resp = pm.response.json();",
							"",
							"pm.collectionVariables.set(\"storeId\", pm.variables.replaceIn(resp.id));"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUri}}/store/:owner/:name",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"store",
						":owner",
						":name"
					],
					"variable": [
						{
							"key": "owner",
							"value": "{{username}}"
						},
						{
							"key": "name",
							"value": "{{storeName}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Генерация случайного списка карт из базы (1-1000)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const resp = pm.response.json();",
							"",
							"pm.sendRequest({",
							"    url: pm.collectionVariables.get('baseUri') + '/store/' + pm.collectionVariables.get('storeId') +'/singles/import/json',",
							"    method: 'PUT',",
							"    header: {",
							"         'content-type': 'application/json',",
							"         'Authorization': 'Bearer ' + pm.collectionVariables.get('jwt')",
							"    },",
							"    body: {",
							"        mode: 'raw',",
							"        raw: resp",
							"    }",
							"}, function (err, res) {",
							"    console.log(res);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUri}}/rest/search/random?size={{$randomInt}}&lang=ru",
					"host": [
						"{{baseUri}}"
					],
					"path": [
						"rest",
						"search",
						"random"
					],
					"query": [
						{
							"key": "size",
							"value": "{{$randomInt}}"
						},
						{
							"key": "lang",
							"value": "ru"
						}
					]
				}
			},
			"response": []
		}
	],
